x-assets: &default-frontend
  build:
    context: "."
    target: "frontend"
    args:
      - "NODE_ENV=${NODE_ENV:-production}"
  env_file:
    - ".env"
  restart: "${DOCKER_RESTART_POLICY:-unless-stopped}"
  stop_grace_period: "3s"
  tty: true
  volumes:
    - ".:/app"

services:
  js:
    <<: *default-frontend
    command: "../run yarn:build:js"

  css:
    <<: *default-frontend
    command: "../run yarn:build:css"
